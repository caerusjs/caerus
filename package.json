{
  "name": "caerus",
  "version": "0.4.2",
  "description": "An opinionated framework and ecosystem for building web applications with the goal of rapid development and low maintenence.",
  "engines": {
    "node": "^12"
  },
  "main": "./dist/lib/cli/cli.js",
  "repository": "https://github.com/krisquigley/caerus",
  "homepage": "https://github.com/krisquigley/caerus",
  "author": "Kris Quigley <kris@krisquigley.co.uk>",
  "license": "MIT",
  "prepublish": "yarn test",
  "keywords": [
    "framework",
    "reactjs",
    "react-router",
    "expressjs",
    "typescript",
    "typeorm",
    "typegraphql",
    "opinionated",
    "graphql",
    "apollo-server-express",
    "apollo-client"
  ],
  "bin": {
    "caerus": "./bin/caerus"
  },
  "scripts": {
    "caerus": "./bin/caerus",
    "build": "yarn tsc --build tsconfig.build.json --verbose",
    "build:watch": "yarn tsc --build tsconfig.build.json --verbose --watch",
    "test": "yarn jest -c ./src/tests/support/jest.config.js --detectOpenHandles --runInBand"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "preferGlobal": true,
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^13.13.5",
    "@types/yargs": "^15.0.4",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "title-case": "^3.0.2",
    "yargs": "^15.3.1"
  }
}
