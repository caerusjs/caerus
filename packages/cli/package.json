{
  "name": "@caerusjs/cli",
  "version": "0.6.2",
  "description": "Caerus, an opinionated framework and ecosystem for building web applications with the goal of rapid development and low maintenence.",
  "main": "./dist/lib/cli/cli.js",
  "repository": "https://github.com/caerusjs/caerus",
  "homepage": "https://github.com/caerusjs/caerus",
  "author": "Kris Quigley <kris@krisquigley.co.uk>",
  "license": "MIT",
  "prepublish": "yarn test",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "framework",
    "reactjs",
    "react-router",
    "expressjs",
    "typescript",
    "typeorm",
    "typegraphql",
    "opinionated",
    "graphql",
    "apollo-server-express",
    "apollo-client"
  ],
  "bin": {
    "caerus": "./bin/caerus.js"
  },
  "scripts": {
    "caerus": "./bin/caerus.js",
    "build": "yarn tsc --build tsconfig.build.json --verbose",
    "build:watch": "yarn tsc --build tsconfig.build.json --verbose --watch",
    "test": "./bin/test -c ./src/tests/support/jest.config.js --detectOpenHandles --runInBand"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "preferGlobal": true,
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^13.13.5",
    "@types/yargs": "^15.0.4",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.8.3",
    "@caerusjs/yalc-watch": "^0.0.6"
  },
  "dependencies": {
    "@caerusjs/helpers": "file:.yalc/@caerusjs/helpers",
    "yargs": "^15.3.1"
  },
  "yalcWatch": {
    "watchFolder": "dist",
    "buildWatchCommand": "yarn build:watch",
    "extensions": "js"
  }
}
